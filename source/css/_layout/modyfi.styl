
/* 滚动条 */
::-webkit-scrollbar  
  width 10px;
  height 10px;
 

::-webkit-scrollbar-thumb
  if hexo-config("themes.scrollbar_color")==null || hexo-config("themes.entirety_color")==null
    background-color #e58a8a
  else
    background-color convert(hexo-config("themes.entirety_color"))
  background-image -webkit-linear-gradient( 45deg, rgba(255, 255, 255, 0.4) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.4) 50%, rgba(255, 255, 255, 0.4) 75%, transparent 75%, transparent);
  border-radius 2em


::-webkit-scrollbar-corner  
  background-color transparent;
 
::-moz-selection
  color #fff
  if hexo-config("themes.scrollbar_color")==null || hexo-config("themes.entirety_color")==null
    background-color #e58a8a
  else
    background-color convert(hexo-config("themes.entirety_color"))

/*去掉目录滚动条*/
.toc-article::-webkit-scrollbar 
  display none;
 

/*标题左侧色块*/
.article-header
  border-left 5px solid hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color'))
  padding 30px 0 15px 25px
  padding-left 7.6923%

/*展开全部内容*/
.article-more-link
  a
    background hexo-config('themes.article_more')==null?#4d4d4d:convert(hexo-config('themes.article_more'))
  :hover
    background hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color'))

/*目录颜色*/
.tooltip-content
  background hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color'))

/*icon图标旋转*/
.link-item i:hover
  -webkit-transform rotate(540deg);
  -moz-transform rotate(540deg);
  -o-transform rotate(540deg);
  -ms-transform rotate(540deg);
  transform rotate(540deg);
  -webkit-transition all 0.3s;
  -moz-transition all 0.3s;
  -o-transition all 0.3s;
  -ms-transition all 0.3s;
  transition all 0.3s;

.inner .profilepic img:hover
  -webkit-transform rotate(360deg);
  -moz-transform rotate(360deg);
  -o-transform rotate(360deg);
  -ms-transform rotate(360deg);
  transform rotate(360deg);
  -webkit-transition all 0.5s;
  -moz-transition all 0.5s;
  -o-transition all 0.5s;
  -ms-transition all 0.5s;
  transition all 0.5s;
  -image -webkit-linear-gradient( 45deg, rgba(255, 255, 255, 0.4) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.4) 50%, rgba(255, 255, 255, 0.4) 75%, transparent 75%, transparent);
  border-radius 2em


::-webkit-scrollbar-corner  
  background-color transparent;
 
::-moz-selection
  color #fff
  if hexo-config("themes.scrollbar_color")==null || hexo-config("themes.entirety_color")==null
    background-color #e58a8a
  else
    background-color convert(hexo-config("themes.entirety_color"))

