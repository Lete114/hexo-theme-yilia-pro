  @media screen and (max-width 800px)
    body
      background convert(hexo-config("themes.mobile_bg_img"));
    .mid-col
      background hexo-config("themes.mobile_bg_img") == ''?#eaeaea:transparent
    .article
      hexo-config("themes.article") == null?#fff:convert(hexo-config("themes.article"))
else
  @media screen and (max-width 800px)
    body
      background #eaeaea


body
  position fixed;
  z-index -999;
  width 100%;
  height 100%;
  background-attachment local;
  background-position center;
  -webkit-background-size cover;
  -moz-background-size cover;
  background-size cover;
  background-repeat no-repeat;


/*版权框两边颜色*/
.post-copyright  
  position relative;
  margin 2rem 0 0.5rem;
  padding 0.5rem 0.8rem;
  -webkit-transition box-shadow 0.3s ease-in-out;
  -moz-transition box-shadow 0.3s ease-in-out;
  -o-transition box-shadow 0.3s ease-in-out;
  -ms-transition box-shadow 0.3s ease-in-out;
  transition box-shadow 0.3s ease-in-out;
  box-shadow 0 0px 2px 0px rgba(0, 0, 0, 0.4);
  border-radius 10px;
  border-left 2px solid hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color'))
  border-right 2px solid hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color'))
 
/*版权右上角小圆圈*/
.post-copyright
  :before
    position absolute;
    top 0.5rem;
    right 0.5rem;
    width 0.8rem;
    height 0.8rem;
    border-radius 50%;
    background hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color'))
    content '';
  :after
    position absolute;
    top 0.7rem;
    right 0.7rem;
    width 0.4rem;
    height 0.4rem;
    border-radius 50%;
    content '';
    background #fff

/*标题前面的图标与旋转*/
@keyframes auto_rotate  
  from  
    transform rotate(0)
   
  to  
    transform rotate(convert(hexo-config("rotate_deg")))
   
 
 

/*鼠标悬停版权*/
.post-copyright:hover  
  box-shadow 0 0px 7px 0px rgba(0, 0, 0, 0.4);
 
/*版权信息标题*/
.post-copyright .post-copyright-meta
  color hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color'))
  font-weight bold;



/*选中文字颜色*/
::selection
  color hexo-config("themes.selection_text")==null?#fff:convert(hexo-config("themes.selection_text"))
  background hexo-config("themes.selection_text_bg")==null?#00c4b6:convert(hexo-config("themes.selection_text_bg"))

#container.show
  background convert(hexo-config("themes.slider")) !important