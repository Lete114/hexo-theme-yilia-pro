  .vmeta .vat
    border 1px solid hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color')) !important
    color hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color')) !important
    padding: 3px 20px;
    &:hover
      color #fff !important
      cursor pointer
      background hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color')) !important
  .vwrap
    box-shadow 2px 2px 5px #bbb
    border-color transparent
  .vcard
    box-shadow 2px 2px 5px #bbb
    background rgba(255, 255, 255, 0.3)
    border-radius 8px
    padding 30px
    margin 30px 0px 0px 0px
  .vquote .vcard
    box-shadow 2px 2px 5px transparent
    background rgba(255, 255, 255, 0.0)
    padding 0px


