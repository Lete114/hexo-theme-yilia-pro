  .vicon
    fill hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color'))
  .vcol button
    color hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color'))
    border-color hexo-config('themes.entirety_color')==null?#e58a8a:convert(hexo-config('themes.entirety_color'))
    &:hover
      color #fff
