@media screen and (max-width 800px)
  .say
    margin 0px

#artitalk_main #shuoshuo_content
  margin 0 auto
  width 80%

#artitalk_part1 #main
  margin-top 10%

#maina li:before
  display none !important


.power
  margin: 0 auto;
  width: 80%;


#cursor
  animation typedjsBlink 0.7s infinite
  -webkit-animation typedjsBlink 0.7s infinite
  animation typedjsBlink 0.7s infinite

@keyframes typedjsBlink
  50%
    opacity 0.0

@-webkit-keyframes typedjsBlink
  0%
    opacity 1
  50%
    opacity 0.0
  100%
    opacity 1


.title
  text-align center
  font-size 30px
  margin-top 30px

#subtitle
  font-size 20px

say
  background hexo-config("themes.article") == null?#fff:convert(hexo-config("themes.article"))
  margin 30px
  position relative
  border 1px solid #ddd
  border-top 1px solid #fff
  border-bottom 1px solid #fff
  transition all 0.2s ease-in
  display block

